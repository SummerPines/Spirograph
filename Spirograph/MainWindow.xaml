<Window x:Class="Spirograph.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spirograph"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="900">
    <Grid x:Name="gridSpiro" Margin="0,85,-0.4,0">
        <Label Content="number of points" HorizontalAlignment="Left" Margin="72,-39,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNumPoints" HorizontalAlignment="Left" Height="23" Margin="72,-62,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="120"/>
        <Label Content="Radius in points" HorizontalAlignment="Left" Margin="330,-39,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtRadius" HorizontalAlignment="Left" Height="23" Margin="330,-67,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnMake" Content="Make Spiro-graph!" HorizontalAlignment="Left" Margin="556,-44,0,0" VerticalAlignment="Top" Width="123" Click="btnMake_Click"/>


    </Grid>
</Window>
