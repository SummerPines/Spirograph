<Window x:Class="Spirograph.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Spirograph"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1100">
    <Grid x:Name="gridSpiro" Margin="0,85,-0.4,88.4">
        <Label Content="Radius of Inner Circle" HorizontalAlignment="Left" Margin="72,-39,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSmallRadius" HorizontalAlignment="Left" Height="23" Margin="72,-62,0,0" TextWrapping="Wrap" Text="32" VerticalAlignment="Top" Width="120"/>
        <Label Content="Radius of Outer Circle (points)" HorizontalAlignment="Left" Margin="330,-39,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtLargeRadius" HorizontalAlignment="Left" Height="23" Margin="330,-67,0,0" TextWrapping="Wrap" Text="200" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnMake" Content="Make Spiro-graph!" HorizontalAlignment="Left" Margin="556,-44,0,0" VerticalAlignment="Top" Width="123" Click="btnMake_Click"/>
        <StackPanel x:Name="stkMain" HorizontalAlignment="Left" Height="605" Margin="27,10,0,-67.6" VerticalAlignment="Top" Width="1057"/>


    </Grid>
</Window>
